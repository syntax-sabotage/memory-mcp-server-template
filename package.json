{
  "name": "vps-memory-mcp-server",
  "version": "1.0.0",
  "description": "Professional MCP server for VPS memory system with 790+ memories. Provides semantic search, storage, and management through Model Context Protocol.",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory",
    "vps",
    "claude",
    "ai",
    "server",
    "semantic-search",
    "typescript",
    "memory-database",
    "ai-agent",
    "context",
    "llm"
  ],
  "homepage": "https://github.com/syntax-sabotage/vps-memory-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/syntax-sabotage/vps-memory-mcp-server/issues",
    "email": "support@syntax-sabotage.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/syntax-sabotage/vps-memory-mcp-server.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/syntax-sabotage"
  },
  "license": "MIT",
  "author": {
    "name": "Syntax Sabotage Team",
    "email": "team@syntax-sabotage.com",
    "url": "https://github.com/syntax-sabotage"
  },
  "contributors": [
    {
      "name": "Lars Weiler",
      "email": "lars.weiler@syntax-sabotage.com",
      "url": "https://github.com/larsweiler"
    }
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vps-memory-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc && npm run chmod",
    "build:clean": "rimraf dist && npm run build",
    "chmod": "chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test:ci && npm run build:clean",
    "preversion": "npm run lint && npm run test:ci",
    "version": "npm run build:clean && git add .",
    "postversion": "git push && git push --tags",
    "clean": "rimraf dist coverage .nyc_output",
    "docs": "typedoc src/index.ts",
    "security-audit": "npm audit && npm audit --audit-level high",
    "validate": "npm run lint && npm run type-check && npm run test:ci && npm run security-audit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "volta": {
    "node": "18.19.0",
    "npm": "10.2.3"
  }
}